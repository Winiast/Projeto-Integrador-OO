<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import io.github.palexdev.materialfx.controls.*?>

<VBox prefHeight="720.0" prefWidth="1280.0"
        spacing="20.0" xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center" fx:controller="ifpr.pgua.eic.controllers.auth.AlterarSenhaController"
        stylesheets="@../../styles/auth/AlterarSenha.css">

    <padding>
        <Insets topRightBottomLeft="15.0"/>
    </padding>

    <children>
        <ImageView>
            <image>
                <Image url="@../../images/Logo-IFPR.png" />
            </image>
        </ImageView>    
    </children>
    
    <Label text="ALTERAR SENHA" styleClass="title" />

    <MFXTextField floatMode="BORDER" floatingText="Usuario" prefWidth="275" prefHeight="35" fx:id="tfUsuario" />
    
    <MFXPasswordField floatMode="BORDER" floatingText="Senha" prefWidth="275" prefHeight="35" fx:id="tfSenha" />

    <MFXPasswordField floatMode="BORDER" floatingText="Confirmar Senha" prefWidth="275" prefHeight="35" fx:id="tfConfirmarSenha" />

    <MFXButton prefWidth="90" prefHeight="35" text="Entrar" styleClass="btn"/>

    <MFXButton prefWidth="60" prefHeight="35" text="Voltar" styleClass="btn" onAction="#voltar" />

</VBox>