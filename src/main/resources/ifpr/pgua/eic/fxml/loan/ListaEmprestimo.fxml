<HBox prefHeight="720.0" prefWidth="1280.0" 
        xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="3.0"
        stylesheets="@../../styles/Global.css, @../../styles/sports/EsporteLista.css" fx:controller="ifpr.pgua.eic.controllers.loan.ListaEmprestimoController" >
         
    <VBox prefHeight="720.0" prefWidth="200.0" alignment="center" styleClass="container-menu" spacing="10.0">
        <children>

            <VBox prefHeight="400.0" prefWidth="200.0" styleClass="logo-menu" spacing="10.0">
                <ImageView fitHeight="300.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="image-menu">
                    <image>
                        <Image url="@../../images/Logo-IFPR.png" />
                    </image>
                </ImageView>
            </VBox>
                <VBox prefHeight="500.0" prefWidth="200.0" styleClass="buttons-menu" spacing="4.0">
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Usuarios" styleClass="button-menu" onAction="#usuarioLista"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Empréstimos" styleClass="button-menu-special" onAction="#emprestimoLista"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Equipamentos" styleClass="button-menu" onAction="#equipamentosLista"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Esportes" styleClass="button-menu" onAction="#esporteLista"/>
                </VBox>
            <VBox styleClass="button-sair" prefHeight="200">
                    <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0"  text="Sair" styleClass="button-menu" onAction="#sair"/>
            </VBox>
         </children>
    </VBox>

  
    
    <VBox prefHeight="720.0" prefWidth="1280.0" alignment="center" spacing="20.0" styleClass="container-form">
        <children>
           <Label text="Lista de Emprestimos" styleClass="form-title" />
           <HBox prefWidth="1000" alignment="center" styleClass="container-search" >
               <MFXTextField floatMode="BORDER" floatingText="Nome do Esporte"  prefWidth="400" prefHeight="50" styleClass="form-search" />
               <HBox prefWidth="600" spacing="200.0">
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="50.0" prefWidth="200.0"  text="Buscar" styleClass="form-btn-search"  onAction="#buscarEmprestimo"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="50.0" prefWidth="200.0"  text="Novo +" styleClass="form-btn-new" onAction="#cadastrarEmprestimo" />
               </HBox>

           </HBox>

            <TableView maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="1000" prefHeight="400" fx:id="tbEmprestimo" >
                <columns>
                    <TableColumn fx:id="tbcNomeAluno" prefWidth="170" text="Nome do Aluno" />
                    <TableColumn fx:id="tbcTurma" prefWidth="120" text="Turma" />
                    <TableColumn fx:id="tbcEquipamentos" prefWidth="200" text="Equipamentos" />
                    <TableColumn fx:id="tbcObservacoes" prefWidth="170" text="Observações" />
                    <TableColumn fx:id="tbcDia" prefWidth="100" text="Dia" />
                    <TableColumn fx:id="tbcHorario" prefWidth="100" text="Horário" />
                    <TableColumn fx:id="tbcEditar" prefWidth="69" text="Editar" />
                    <TableColumn fx:id="tbcExcluir" prefWidth="69" text="Excluir" />
                </columns>
            </TableView>
        </children>
    </VBox>
</HBox>