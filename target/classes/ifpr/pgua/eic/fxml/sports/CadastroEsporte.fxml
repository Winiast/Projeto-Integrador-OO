                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Listar Empréstimos" styleClass="button-menu"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Cadastrar Empréstimo" styleClass="button-menu"/>
                </VBox>
        
            <VBox styleClass="button-sair" prefHeight="200">
                    <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0"  text="Sair" styleClass="button-menu"/>
            </VBox>
         </children>
    </VBox>

  
    
    <VBox prefHeight="720.0" prefWidth="1080.0" spacing="10.0"
        alignment="center">
        <children>
            <Label text="Cadastrar Esporte" />
            <MFXTextField prefWidth="400.0" promptText="Nome do Esporte" />
            <MFXTextField prefWidth="400.0" promptText="Descrição" />
            <MFXButton prefWidth="400.0" text="Cadastrar" />
        </children>
        
    </VBox>


