<HBox prefHeight="720.0" prefWidth="1280.0" spacing="10.0" 
        xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
        stylesheets="@../../styles/sports/Esporte.css"
         >



    <VBox prefHeight="720.0" prefWidth="200.0" spacing="10.0" alignment="center" styleClass="container-menu">
        <children>

            <VBox prefHeight="450.0" prefWidth="200.0" styleClass="logo-menu">
                <ImageView fitHeight="300.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="image-menu">
                    <image>
                        <Image url="@../../images/Logo-IFPR.png" />
                    </image>
                </ImageView>
            </VBox>
                <VBox prefHeight="430.0" prefWidth="200.0" styleClass="buttons-menu">
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Listar Esportes" styleClass="button-menu"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Cadastrar Esporte" styleClass="button-menu"/>
                <MFXButton alignment="center" mnemonicParsing="false"  prefHeight="40.0" prefWidth="200.0" text="Listar Equipamentos" styleClass="button-menu"/>
